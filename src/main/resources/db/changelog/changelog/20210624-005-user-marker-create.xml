<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20210624-005-1" author="lzugaj" >
        <createTable tableName="user_marker">
            <column name="id" autoIncrement="true" type="INT">
                <constraints primaryKey="true" />
            </column>

            <column name="user_id" type="INT">
                <constraints nullable="false" />
            </column>

            <column name="marker_id" type="INT">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20210624-005-2" author="lzugaj">
        <addForeignKeyConstraint
                constraintName="fk_user_marker"
                baseTableName="user_marker"
                baseColumnNames="user_id"
                referencedTableName="user"
                referencedColumnNames="id"
        />
    </changeSet>

    <changeSet id="20210624-005-3" author="lzugaj">
        <addForeignKeyConstraint
                constraintName="fk_marker_user"
                baseTableName="user_marker"
                baseColumnNames="marker_id"
                referencedTableName="marker"
                referencedColumnNames="id"
        />
    </changeSet>

</databaseChangeLog>